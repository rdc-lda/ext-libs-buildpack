#!/bin/bash

build_path=$1
cache_path=$2
deps_path=$3
index=$4

if [ ! -z "$ELBP_CONFIG_LIB_LOCATIONS" ]; then

    echo '-----> Downloading external libraries...'
    mkdir -p $deps_path/app_libs

    for url in $(echo $ELBP_CONFIG_LIB_LOCATIONS | jq -r '.[]'); do
       echo "       - $url"
       filename=$(echo "${url##*/}")
       curl -s $url --output $deps_path/app_libs/$filename
    done

else
    echo '-----> No external libraries found for downloading, skipping.'
    exit 0
fi